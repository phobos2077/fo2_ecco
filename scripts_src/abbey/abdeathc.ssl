/*******************************************************************
   The start procedure is the first procedure called when the map is
   first entered. Any initial information that needs to be set up
   should be placed in here.
*******************************************************************/

procedure start begin
   if (starttile == 0 and not is_loading_game) then call map_enter_p_proc; // pbs: initialize replaced obj
end


procedure destroy_p_proc begin
   inc_evil_critter
   if (self_pid == PID_LARGE_DEATHCLAW or self_pid == PID_TOUGH_DEATHCLAW) then begin
      give_exp_points(500);
      display_msg(mstr(102));
      set_global_var(GVAR_ABBEY_BEAST, 2);
   end
end


procedure critter_p_proc begin
   if (self_can_see_dude and (tile_distance_objs(self_obj,dude_obj) <= 7)) then begin // phobos2077: add distance check
      attack(dude_obj);
   end

   if (not anim_busy(self_obj)) then begin
      reg_anim_clear(self_obj);
      reg_anim_begin();
      self_walk_to_tile(tile_num_in_direction(starttile, Random(0, 5), Random(3, 10)));
      reg_anim_end();
   end
end


