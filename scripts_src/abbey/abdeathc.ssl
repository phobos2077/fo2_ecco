   if (action_being_used == SKILL_STEAL) then
      script_overrides;
end

procedure map_enter_p_proc begin
   // phobos2077: replace tough with normal deathclaw
   ndebug("map_enter, my pid: "+self_pid+", loading: "+is_loading_game);
   if (not is_loading_game and (self_pid == PID_TOUGH_DEATHCLAW or self_pid == PID_SM_TOUGH_DEATHCLAW)) then begin
      create_object_sid(PID_LARGE_DEATHCLAW if self_pid == PID_TOUGH_DEATHCLAW else PID_SMALL_DEATHCLAW, self_tile, self_elevation, NAME);
      destroy_self;
      return;
   end
   set_self_team(TEAM_DEATHCLAW);
   set_self_ai(AI_GENERIC_DEATH_CLAW);
   if (starttile == 0) then set_starttile(self_tile);
end
